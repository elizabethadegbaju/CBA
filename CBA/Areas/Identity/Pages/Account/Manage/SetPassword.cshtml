@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Set password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4>Set your password</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<p class="blue-text">
    You do not have a local username/password for this site. Add a local
    account so you can log in without an external login.
</p>
<div class="row">
    <div class="col m6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="red-text"></div>
            <div class="input-field">
                <label asp-for="Input.NewPassword"></label>
                <input asp-for="Input.NewPassword" class="validate" />
                <span asp-validation-for="Input.NewPassword" class="red-text"></span>
            </div>
            <div class="input-field">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="validate" />
                <span asp-validation-for="Input.ConfirmPassword" class="red-text"></span>
            </div>
            <button type="submit" class="btn waves-effect waves-light">Set password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}