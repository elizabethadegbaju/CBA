@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col m6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="red-text"></div>
            <div class="input-field">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="validate" disabled />
            </div>
            <div class="input-field">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="validate" />
                <span asp-validation-for="Input.FirstName" class="red-text"></span>
            </div>
            <div class="input-field">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="validate" />
                <span asp-validation-for="Input.LastName" class="red-text"></span>
            </div>
            <div class="input-field">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="validate" />
                <span asp-validation-for="Input.PhoneNumber" class="red-text"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn waves-effect waves-light">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}