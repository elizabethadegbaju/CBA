@using Microsoft.AspNetCore.Identity
@inject SignInManager<CBAUser> SignInManager
@inject UserManager<CBAUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage Account">Hello @User.Identity.Name!</a>
    </li>
    <li>
        <form class="form-inline" method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="btn waves-effect waves-light">Logout</button>
        </form>
    </li>
}
else
{
    <!--<li>
        <a asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>-->
    <li>
        <a asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
