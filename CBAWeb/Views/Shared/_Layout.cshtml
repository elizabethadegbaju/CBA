<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CBA</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/materialize/css/materialize.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @Html.Raw("<style>header, main, footer {padding-left: 300px;}@media only screen and (max-width : 992px) {header, main, footer {padding-left: 0;}}</style>")
</head>
<body>
    <header>
        <nav>
            <div>
                <div class="nav-wrapper">
                    <a href="#" data-target="slide-out" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                    <a class="brand-logo center" asp-area="" asp-controller="Home" asp-action="Index">CBA</a>
                    
                </div>
            </div>
        </nav>
        <ul id="slide-out" class="sidenav sidenav-fixed">
            <li>
                <a asp-area="" asp-controller="Home" asp-action="Index" title="CBA Home">Home</a>
            </li>
            <li>
                <a asp-area="" asp-action="Index" asp-controller="Roles" title="Manage Roles">Roles</a>
            </li>
            <li>
                <a asp-area="" asp-action="Index" asp-controller="Users" title="Manage Users">Users</a>
            </li>
            <li class="no-padding">
                <ul class="collapsible collapsible-accordion">
                    <li>
                        <a class="collapsible-header">Postings<i class="material-icons right">arrow_drop_down</i></a>
                        <div class="collapsible-body">
                            <ul>
                                <li>
                                    <a asp-area="" asp-action="Index" asp-controller="GLPostings" title="Postings Within Internal Accounts">GL Postings</a>
                                </li>
                                <li>
                                    <a asp-area="" asp-action="Create" asp-controller="GLPostings" title="Post Transaction between internal accounts">Create GL Posting</a>
                                </li>
                                <li>
                                    <a asp-area="" asp-action="Index" asp-controller="TellerPostings" title="Postings to Customer Accounts">Teller Postings</a>
                                </li>
                                <li>
                                    <a asp-area="" asp-action="Create" asp-controller="TellerPostings" title="Post Transaction to Customer Account">Create Teller Posting</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </li>
            <li class="no-padding">
                <ul class="collapsible collapsible-accordion">
                    <li>
                        <a class="collapsible-header">Account Management<i class="material-icons right">arrow_drop_down</i></a>
                        <div class="collapsible-body">
                            <ul>
                                <li>
                                    <a asp-area="GL" asp-action="Index" asp-controller="Categories" title="GL Category Management">Categories</a>
                                </li>
                                <li>
                                    <a asp-area="GL" asp-action="Index" asp-controller="Accounts" title="Internal Account Management">Internal Accounts</a>
                                </li>
                                <li>
                                    <a asp-area="GL" asp-action="Index" asp-controller="CustomerAccounts" title="Customer Account Management">Customer Accounts</a>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <a asp-area="GL" asp-action="Index" asp-controller="AccountConfigurations" title="Savings, Current, and Loan Account Configurations">Configurations</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </li>
            <li>
                <a asp-area="" asp-action="Index" asp-controller="Customers" title="Manage Customers">Customers</a>
            </li>
            <li><div class="divider"></div></li>
            <partial name="_LoginPartial" />
        </ul>
       
        </header>

        <main>
            <div style="padding:20px">
                @RenderBody()
            </div>
        </main>

        <footer class="page-footer">
            <div>
