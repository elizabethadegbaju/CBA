@model ManageUserRolesViewModel
@{
    ViewData["Title"] = "Create User";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col m4">
        <form method="post">
            <h4>Add a new user account.</h4>
            <hr />
            <div asp-validation-summary="All" class="red-text"></div>
            <div class="input-field">
                <label asp-for="@Model.User.FirstName"></label>
                <input asp-for="@Model.User.FirstName" class="validate" />
                <span asp-validation-for="@Model.User.FirstName" class="red-text"></span>
            </div>
            <div class="input-field">
                <label asp-for="@Model.User.LastName"></label>
                <input asp-for="@Model.User.LastName" class="validate" />
                <span asp-validation-for="@Model.User.LastName" class="red-text"></span>
            </div>
            <div class="input-field">
                <label asp-for="@Model.User.Email"></label>
                <input asp-for="@Model.User.Email" class="validate" />
                <span asp-validation-for="@Model.User.Email" class="red-text"></span>
            </div>
            <h5>Assign roles:</h5>
            <dl class="row">
                @for (int i = 0; i < Model.UserRoles.Count(); i++)
                {
                <dt class="col s4">
                    @Model.UserRoles[i].Name
                    <input hidden asp-for="@Model.UserRoles[i].Name" type="text">
                </dt>
                    <dd class="col s8">
                        <div class="switch">
                            <label>
                                Off
                                <input asp-for="@Model.UserRoles[i].IsSelected" type="checkbox">
                                <span class="lever"></span>
                                On
                            </label>
                        </div>
                    </dd>
                }
            </dl>
            <button type="submit" class="btn waves-effect waves-light">Create User</button>
        </form>
    </div>
</div>
