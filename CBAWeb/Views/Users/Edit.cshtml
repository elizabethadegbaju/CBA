@model UserViewModel

@{
    ViewData["Title"] = $"Edit {Model.UserName}";
}

<h1>@ViewData["Title"]</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col m4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-group">
                <label class="control-label">User Status</label>
                <div class="switch">
                    <label>
                        Disabled
                        <input asp-for="IsEnabled" type="checkbox">
                        <span class="lever"></span>
                        Enabled
                    </label>
                </div>
            </div>
            <br />
            <input type="hidden" asp-for="Id" />
            <div class="input-field">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="validate" />
                <span asp-validation-for="FirstName" class="red-text"></span>
            </div>
            <div class="input-field">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="validate" />
                <span asp-validation-for="LastName" class="red-text"></span>
            </div>
            <div class="input-field">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="validate" disabled />
                <span asp-validation-for="UserName" class="red-text"></span>
            </div>
            <div class="input-field">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="validate" disabled />
                <span asp-validation-for="Email" class="red-text"></span>
            </div>
            @if (Model.TillAccountNo != null)
            {
                <div class="input-field">
                    <label for="UserTill" class="active">Assigned Till</label>
                    <input for="UserTill" value="@Model.TillAccountNo" class="validate" disabled />
                    <span asp-validation-for="Tills" class="red-text"></span>
                </div>
                <a asp-action="RemoveTill" asp-route-userId="@Model.Id">Remove Till</a>
                <br />
            }
            else
            {
                <div>
                    <label asp-for="TillId">Available Tills</label>
                    <select asp-for="TillId" asp-items="Model.Tills" class="browser-default">
                    </select>
                    <span asp-validation-for="Tills" class="red-text"></span>
                </div>
            }
            
            <br />

            <button type="submit" class="btn waves-effect waves-light">Save</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<br />

